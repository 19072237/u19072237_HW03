@*model IEnumerable<u19072237HW3.Models.FileModel>*@
@using u19072237HW3.Models
@model List<FileModel>


@{
    ViewBag.Title = "Index";
}

<h4>Video Files</h4>
<h5>This page shows the Videos uploaded by the user with options to delete and download</h5>
<br />

<style type="text/css">
    .row {
        float: left;
        margin: 10px;
        border-radius: 5px;
    }
</style>
<body style="background-color:darksalmon">
    <div class="container">

        @foreach (FileModel file in Model)
        {

            <div class="row">
                <div class="col">
                    <a class="fancybox" href="~/Media/Videos/@file.FileName">
                        <video width="300" height="240" controls  style="border: solid black">
                            <source src="~/Media/Videos/@file.FileName" type="video/mp4">
                        </video>
                    </a>
                    <br />
                    <p>@file.FileName</p>
                    <button type="button" class="btn btn-warning">
                        @Html.ActionLink("DOWNLOAD", "DownloadFile", new { fileName = file.FileName })
                    </button>
                    <button type="button" class="btn btn-dark">
                        @Html.ActionLink("DELETE", "DeleteFile", new { fileName = file.FileName }, new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                    </button>
                </div>
            </div>
        }
    </div>
</body>
